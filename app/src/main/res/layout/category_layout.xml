<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_marginStart="@dimen/object_margin_left"
    android:layout_height="wrap_content"
    android:layout_marginTop="25dp">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@mipmap/ic_museum" />

    <!--TODO: Длинная строка сдвинет звёзды за экран-->
    <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:text="Музеи"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:textSize="16sp" />

    <!--TODO: TextView для текста, Space чтобы занять место-->
    <!--TODO: А ещё android:layout_width="0"-->
    <TextView
        android:layout_width="wrap_content"
        android:layout_weight="1"
        android:layout_height="wrap_content" />
    <!--Лучше заменить на RateBar или свою вьюшку-->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/star_one"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_gravity="center"
            android:src="@mipmap/ic_star_border" />
        <ImageView
            android:id="@+id/star_two"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_gravity="center"
            android:src="@mipmap/ic_star_border" />
        <ImageView
            android:id="@+id/star_three"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_gravity="center"
            android:src="@mipmap/ic_star_border" />
        <ImageView
            android:id="@+id/star_four"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_gravity="center"
            android:src="@mipmap/ic_star_border" />
        <ImageView
            android:id="@+id/star_five"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_gravity="center"
            android:src="@mipmap/ic_star_border" />
        <ImageView
            android:id="@+id/imageView"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="center"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="10dp"
            android:src="@mipmap/ic_favorite" />
    </LinearLayout>


</LinearLayout>